generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  DOCTOR
  PATIENT
}

enum AppointmentStatus {
  PENDING
  ACCEPTED
  REJECTED
  COMPLETED
  CANCELLED
}

model User {
  id            String    @id @default(uuid()) @db.VarChar(36)
  email         String    @unique @db.VarChar(255)
  password      String    @db.VarChar(255)
  firstName     String    @db.VarChar(100)
  lastName      String    @db.VarChar(100)
  phone         String?   @db.VarChar(20)
  role          Role      @default(PATIENT)
  avatar        String?   @db.VarChar(500)
  isActive      Boolean   @default(true)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relations
  doctorProfile    DoctorProfile?
  patientProfile   PatientProfile?
  notifications    Notification[]
  refreshTokens    RefreshToken[]

  @@map("users")
}

model RefreshToken {
  id          String   @id @default(uuid()) @db.VarChar(36)
  token       String   @unique @db.VarChar(500)
  userId      String   @db.VarChar(36)
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  expiresAt   DateTime
  createdAt   DateTime @default(now())

  @@index([userId])
  @@map("refresh_tokens")
}

model DoctorProfile {
  id              String   @id @default(uuid()) @db.VarChar(36)
  userId          String   @unique @db.VarChar(36)
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  specialization  String   @db.VarChar(100)
  licenseNumber   String   @unique @db.VarChar(50)
  bio             String?  @db.Text
  consultationFee Decimal  @default(0) @db.Decimal(10, 2)
  experience      Int      @default(0)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  // Relations
  availability    DoctorAvailability[]
  appointments    Appointment[]

  @@map("doctor_profiles")
}

model PatientProfile {
  id             String    @id @default(uuid()) @db.VarChar(36)
  userId         String    @unique @db.VarChar(36)
  user           User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  dateOfBirth    DateTime?
  gender         String?   @db.VarChar(20)
  address        String?   @db.VarChar(500)
  bloodGroup     String?   @db.VarChar(10)
  allergies      String?   @db.Text
  medicalHistory String?   @db.Text
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  // Relations
  appointments  Appointment[]

  @@map("patient_profiles")
}

model DoctorAvailability {
  id              String   @id @default(uuid()) @db.VarChar(36)
  doctorProfileId String   @db.VarChar(36)
  doctorProfile   DoctorProfile @relation(fields: [doctorProfileId], references: [id], onDelete: Cascade)
  dayOfWeek       Int      // 0-6 (Sunday-Saturday)
  startTime       String   @db.VarChar(10) // HH:mm format
  endTime         String   @db.VarChar(10) // HH:mm format
  slotDuration    Int      @default(30) // in minutes
  isActive        Boolean  @default(true)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@unique([doctorProfileId, dayOfWeek])
  @@index([doctorProfileId])
  @@map("doctor_availability")
}

model Appointment {
  id              String            @id @default(uuid()) @db.VarChar(36)
  patientId       String            @db.VarChar(36)
  patient         PatientProfile    @relation(fields: [patientId], references: [id], onDelete: Cascade)
  doctorId        String            @db.VarChar(36)
  doctor          DoctorProfile     @relation(fields: [doctorId], references: [id], onDelete: Cascade)
  appointmentDate DateTime
  startTime       String            @db.VarChar(10) // HH:mm format
  endTime         String            @db.VarChar(10) // HH:mm format
  status          AppointmentStatus @default(PENDING)
  reason          String?           @db.Text
  notes           String?           @db.Text
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt

  @@index([patientId])
  @@index([doctorId])
  @@map("appointments")
}

model Notification {
  id        String   @id @default(uuid()) @db.VarChar(36)
  userId    String   @db.VarChar(36)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  title     String   @db.VarChar(255)
  message   String   @db.Text
  type      String   @db.VarChar(50) // appointment, system, reminder
  isRead    Boolean  @default(false)
  metadata  Json?
  createdAt DateTime @default(now())

  @@index([userId])
  @@map("notifications")
}
