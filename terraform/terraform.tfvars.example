# Production Environment Variables for CareSync

aws_region  = "us-east-1"
environment = "production"
project_name = "caresync"

# VPC Configuration
vpc_cidr           = "10.0.0.0/16"
availability_zones = ["us-east-1a", "us-east-1b", "us-east-1c"]
private_subnet_cidrs = ["10.0.1.0/24", "10.0.2.0/24", "10.0.3.0/24"]
public_subnet_cidrs  = ["10.0.101.0/24", "10.0.102.0/24", "10.0.103.0/24"]

# EKS Configuration
eks_cluster_version     = "1.28"
eks_node_instance_types = ["t3.medium", "t3.large"]
eks_node_desired_size   = 3
eks_node_min_size       = 2
eks_node_max_size       = 10

# RDS Configuration
rds_instance_class        = "db.t3.medium"
rds_allocated_storage     = 20
rds_max_allocated_storage = 100
rds_engine_version        = "15.4"
rds_database_name         = "caresync_db"
rds_username              = "caresync"
# rds_password should be set via environment variable or .tfvars file (not in version control)
# export TF_VAR_rds_password="your-secure-password"

# Domain Configuration
domain_name = "caresync.example.com"

# Feature Flags
enable_monitoring                   = true
enable_cluster_autoscaler           = true
enable_aws_load_balancer_controller = true
